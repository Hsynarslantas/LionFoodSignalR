
@{
    Layout = null;
}
<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<div class="content">
    <div class="contanier-fluid">
        <script type="text/javascript">

            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7217/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                }).catch((err) => { console.log(err) });


                connection.on("ReceiveClientCount", (clientCount) => {
                    $("#clientCountValue").text(clientCount);
                });

            });

        </script>

        <h4 class="page-title">Anlık Client Sayısı: <strong id="clientCountValue"></strong></h4>


        <h4 class="page-title">Anlık Client Sayfası</h4>

    </div>
</div>
