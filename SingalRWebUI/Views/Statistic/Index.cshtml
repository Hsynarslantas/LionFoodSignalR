<script type="text/javascript">

    $(document).ready(() => {

        var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7217/SignalRHub").build();
        $("#connstatus").text(connection.state);
        connection.start().then(() => {
            $("#connstatus").text(connection.state);
            setInterval(() => {
                connection.invoke("SendStatistic");
            }, 1000);

        }).catch((err) => { console.log(err) });

        connection.on("RecieveCategoryCount", (value) => {
            $("#categorycount").text(value);
        });
         connection.on("RecieveProductCount", (value2) => {
            $("#productcount").text(value2);
        });
           connection.on("RecieverActiveProductCount", (value2) => {
            $("#activecategorycount").text(value2);
        });
           connection.on("RecieverPassiveProductCount", (value2) => {
            $("#passivecategorycount").text(value2);
        });
             connection.on("RecieveProductCountByCategoryNameHamburger", (value2) => {
            $("#productcountbycategorynamehamburger").text(value2);
        });
             connection.on("RecieveProductCountByCategoryNameDrink", (value2) => {
            $("#receiveproductcountbycategorynamedrink").text(value2);
        });
              connection.on("RecieveProductPriceAvg", (value2) => {
            $("#receiveproductpriceavg").text(value2);
        });
              connection.on("RecieveProductNameByMaxPrice", (value2) => {
            $("#productnamebymaxprice").text(value2);
        });
              connection.on("RecieveProductPriceByHamburger", (value2) => {
            $("#productavgpricebyhamburger").text(value2);
        });
              connection.on("RecieveTotalOrderCount", (value2) => {
            $("#totalordercount").text(value2);
        });
              connection.on("RecieveActiveOrderCount", (value2) => {
            $("#activeordercount").text(value2);
        });
              connection.on("RecieveLastOrderPrice", (value2) => {
            $("#lastorderprice").text(value2);
        });
               connection.on("RecieveProductNameByMinPrice", (value2) => {
            $("#productnamebyminprice").text(value2);
        });
                 connection.on("RecieveTotalMoneyCaseAmount", (value2) => {
            $("#totalmoneycaseamount").text(value2);
        });
                 connection.on("RecieveRestaurantTableCount", (value2) => {
            $("#menutablecount").text(value2);
        });

    });

</script>


