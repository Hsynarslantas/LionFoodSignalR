@model LoginDto
@{
    Layout = null;
}
<style>
	.custom-red-btn {
		background-color: #dc3545;
		color: white;
		border: none;
		padding: 12px 24px;
		font-size: 16px;
		border-radius: 5px;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

		.custom-red-btn:hover {
			background-color: #c82333;
		}
</style>
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>LionFood Giriş Sayfası</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/lionfood-doğru.jpg" alt="form" style="width:484px; height:584px">
			</div>
			<form class="form-detail" method="post">
				<h2>Giriş Formu</h2>
				<div class="form-row">
					<input type="text" id="full-name" asp-for="Username" class="input-text" placeholder="Kullanıcı Adınız" required>
				</div>
				<div class="form-row">
					<input type="password" id="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
				</div>

				<button class="btn custom-red-btn">Giriş Yap</button>
				<button href="/Register/Index/" class="btn custom-red-btn">Bir Hesabınız Yok Mu ?</button>
			</form>
		</div>
	</div>
</body>
</html>
