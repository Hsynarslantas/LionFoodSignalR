@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <input type="hidden" asp-for="NotificationId" />
                        <div class="card-header">
                            <div class="card-title"> Bildirim Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Bildirim Türü Giriniz</label>
                                <input type="text" class="form-control" asp-for="Type" id="type">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Bildirim İkonu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="ıcon">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Bildirim Açıklaması Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="desc">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Bildirim Tarihi Giriniz</label>
                                <input type="text" class="form-control" asp-for="Date" id="date">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Bildirim Durumu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Status" id="status">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Bildirimi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

